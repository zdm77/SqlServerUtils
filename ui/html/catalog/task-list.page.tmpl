{{template "base" .}}

{{define "main"}}
    <main class="form-main">
        <div class="card">
            <div class="card-header">
                Задачи для загрузки
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <button class="btn btn-primary" onclick="document.location='/task-create'">Создать</button>
                </li>
                <li class="list-group-item">
                    {{/*                    <div class="container  table-responsive">*/}}
                    <table id="json_data"
                           class="table table-striped table-bordered table-sm table-responsive"></table>
                    {{/*                    </div>*/}}
                </li>
            </ul>
        </div>
        <script>
            fetch('/api/task-list',
                {
                    method: 'PUT',
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({"id": 5})
                })
                .then(response => response.json())
                .then((response) => {
                    if (response.text != 'not-login') {
                        let table = document.getElementById("json_data");
                        let htmlData = '<tr><th>Наименование</th><th>Таблица БД</th></tr>';
                        response.map(function (item) {
                            htmlData += '<tr><td><a href="/task-edit/?id=$id">' + item.name + '</a> </td><td>'
                                + item.table_db + '</td></tr>';
                            htmlData = htmlData.replaceAll("$id", item.id)
                        })
                        table.innerHTML = htmlData;
                    } else {
                        document.location = '/'
                    }
                });
        </script>
    </main>

{{end}}