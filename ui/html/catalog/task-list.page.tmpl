{{template "base" .}}

{{define "main"}}
    <main class="form-main">
        <div class="card">
            <div class="card-header">
                Задачи для загрузки
            </div>
            <ul class="list-group list-group-flush">
                {{template "list-panel"}}
            </ul>
        </div>
        <script>
            function create() {
                document.location = '/task-create'
            }

            fetch('/api/task-list',
                {
                    method: 'PUT',
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({"id": 5})
                })
                .then(response => response.json())
                .then((response) => {
                    if (response.text != 'not-login') {
                        let table = document.getElementById("json_data");
                        let htmlData = '<tr><th>Наименование</th><th>Таблица БД</th></tr>';
                        response.map(function (item) {
                            htmlData += '<tr>' +
                                '<td><a href="/task-edit/?id=$id">' + item.name + '</a> </td>' +
                                '<td>' + item.table_db + '</td>' +
                                '<td width="32px"><i class="bi-trash text-danger" style="cursor: pointer"' +
                                ' onclick="deleteTask(' + item.id + ')"></i></td>' +
                                '</tr> ';


                            htmlData = htmlData.replaceAll("$id", item.id)
                        })
                        table.innerHTML = htmlData;
                    } else {
                        document.location = '/'
                    }
                });

            function deleteTask(id) {
                alert(id)
            }
        </script>
    </main>

{{end}}