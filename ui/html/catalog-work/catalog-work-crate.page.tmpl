            let idsNotNull = []

            function renderTable() {
                idsNotNull = []
                let html = ''
                let counter = 0
                for (field of data.fields) {
                    if (field.name) {
                        html += '<tr>'
                        html += '<td>' + field.name
                        if (!field.is_nullable) {
                            idsNotNull.push('val'+counter)
                            html += '<span style="color: red">*</span>'
                        }
                        html += '</td>'
                        html += '<td>'
                        switch (field.name_type) {
                            case 'date' :
                                html += ' <input class="form-control" style="width:160px"  type="date" '
                                break
                            case 'float' :
                                html += ' <input class="form-control" style="width:160px"  type="number" '
                                break
                            case 'int' :
                                html += ' <input class="form-control" style="width:160px"  type="number" '
                                break
                            default:
                                html += ' <input class="form-control" '
                                break
                        }

                        html += 'id="val' + counter + '">'
                        html += '</td>'
                        html += '</tr>'

                    }
                    counter++
                }
                table.innerHTML = html
            }


            function save() {
                //валидация
                for (id of idsNotNull) {
                    let elem = document.getElementById(id)
                    if (elem ) {
                        if (!elem.value) {
                            alert('Заполните обязательные поля')
                            return
                        }
                    }
                }
                for (let i = 0; i < data.fields.length; i++) {
                    let el = document.getElementById('val' + i)
                    if (el && el.value) {
                        data.fields[i].value = el.value
                    } else {
                        // data.fields[i].value = ''
                    }

                }
                fetch('/api/catalog-work-save',
                    {
                        method: 'POST',
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify(data)
                    })
                    .then(response => response.json())
                    .then((response) => {

                        let txtArr = response.text.split("-")

                        if (txtArr[0] === "ok") {
                            if (!id) {
                                id = Number(txtArr[1])
